@model DCOClearinghouse.Models.ResourceCategory

@{
    ViewData["Title"] = "Edit Category";
}

<h2>Rename Category</h2>

<h4>@@@Model.CategoryName</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCategory" asp-route-returnUrl="@ViewData["ReturnUrl"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">New Category Name</label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div>
                    <input type="submit" value="Save" class="btn btn-success"/>
                    <a onclick="history.go(-1)" class="btn btn-primary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
