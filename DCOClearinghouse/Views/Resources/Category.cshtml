@model ResourceCategory

@{
    ViewData["Title"] = "Category";
}

<div class="jumbotron">
    <h3>@Model.CategoryName</h3>
</div>

@if (Model.Depth == 0)
{
    <ol>
        @foreach (var subcat in Model.ChildrenCategories)
        {
            <li>
                <a asp-action="Category" asp-route-id="@subcat.ID">@Html.DisplayFor(m=>subcat.CategoryName)</a>
            </li>
        }
    </ol>
}
else
{
    <p>
        <a asp-action="Create">Submit new</a>
    </p>

if (Model.Resources.Count == 0)
 {
     <p>None</p>
 }
 else
 {
     <div class="container">
         <table class="table table-striped">
             <thead>
             <tr>
                 <th scope="col">
                     @Html.DisplayNameFor(model => model.Resources.FirstOrDefault().Subject)
                 </th>
                 <th scope="col">
                     @Html.DisplayNameFor(model => model.Resources.FirstOrDefault().CreateDate)
                 </th>
             </tr>
             </thead>
             <tbody>
             @foreach (var item in Model.Resources)
             {
                 <tr>
                     <td scope="row">
                         <a asp-action="Details" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.Subject)</a>
                     </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.CreateDate)
                     </td>
                 </tr>
             }
             </tbody>
         </table>
     </div>
 }
}



