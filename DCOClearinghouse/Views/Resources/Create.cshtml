@model DCOClearinghouse.ViewModels.ResourceViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "_ResourcesLayout";
}

<h4>Post a new resource</h4>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Resource.Subject" class="control-label"></label>
                <input asp-for="Resource.Subject" class="form-control" />
                <span asp-validation-for="Resource.Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resource.Link" class="control-label"></label>
                <input asp-for="Resource.Link" class="form-control" placeholder="Please include https:// or http://" />
                <span asp-validation-for="Resource.Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resource.Description" class="control-label"></label>
                <textarea asp-for="Resource.Description" class="form-control" placeholder="Say something about the resource." rows="4"></textarea>
                <span asp-validation-for="Resource.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Notes for admin</label>
                <textarea class="form-control" placeholder="Optionally suggest the categories for this resource."></textarea>
            </div>

            <div class="form-group">
                <input type="checkbox"  asp-for="ContactProvided" class="form-check-input" id="contactInfoProvidedCheck">
                <label class="form-check-label">I also would like to provide my contact information.</label>
            </div>
            <div id="contact-form" class="form-group" hidden disabled>
                <div class="form-group">                
                    <input type="checkbox" asp-for="Resource.Contact.IsContactInfoPublic" class="form-check-input" id="shareContactWithPublicCheck">
                    <label class="form-check-label" >Share my contact publicly.</label>
                    <small id="emailHelp" class="form-text text-muted">If unchecked, only admin can see your contact.</small>
                </div>
                <div class="row">
                    <div class="col-md-5">
                        <label asp-for="Resource.Contact.FirstName" class="control-label"></label>
                        <input asp-for="Resource.Contact.FirstName" class="form-control" />
                        <span asp-validation-for="Resource.Contact.FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-5">
                        <label asp-for="Resource.Contact.LastName" class="control-label"></label>
                        <input asp-for="Resource.Contact.LastName" class="form-control" />
                        <span asp-validation-for="Resource.Contact.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-10 form-group">
                        <label asp-for="Resource.Contact.Organization" class="control-label"></label>
                        <input asp-for="Resource.Contact.Organization" class="form-control" />
                        <span asp-validation-for="Resource.Contact.Organization" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-10 form-group">
                        <label asp-for="Resource.Contact.PhoneNumber" class="control-label"></label>
                        <input asp-for="Resource.Contact.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Resource.Contact.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-10 form-group">
                        <label asp-for="Resource.Contact.Email" class="control-label"></label>
                        <input asp-for="Resource.Contact.Email" class="form-control" />
                        <span asp-validation-for="Resource.Contact.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-10">
                        <label asp-for="Resource.Contact.Address.Line1" class="control-label"></label>
                        <input asp-for="Resource.Contact.Address.Line1" class="form-control" />
                        <span asp-validation-for="Resource.Contact.Address.Line1" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-10">
                        <label asp-for="Resource.Contact.Address.Line2" class="control-label"></label>
                        <input asp-for="Resource.Contact.Address.Line2" class="form-control" />
                        <span asp-validation-for="Resource.Contact.Address.Line2" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <label asp-for="Resource.Contact.Address.City" class="control-label"></label>
                        <input asp-for="Resource.Contact.Address.City" class="form-control" />
                        <span asp-validation-for="Resource.Contact.Address.City" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Resource.Contact.Address.State" class="control-label"></label>
                        <input asp-for="Resource.Contact.Address.State" class="form-control" />
                        <span asp-validation-for="Resource.Contact.Address.State" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Resource.Contact.Address.Zipcode" class="control-label"></label>
                        <input asp-for="Resource.Contact.Address.Zipcode" class="form-control" />
                        <span asp-validation-for="Resource.Contact.Address.Zipcode" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <label asp-for="Resource.Contact.Address.Country" class="control-label"></label>
                        <input asp-for="Resource.Contact.Address.Country" class="form-control" />
                        <span asp-validation-for="Resource.Contact.Address.Country" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div>
                    <input type="submit" value="Create" class="btn btn-success" />

                    <a asp-action="Index" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script type="text/javascript">
        $("document").ready(function() {
            $("#contactInfoProvidedCheck").change(function() {
                if (document.getElementById('contactInfoProvidedCheck').checked) {
                    $("#contact-form").show();
                    $("#contact-form").enable();
                } else {
                    $("#contact-form").hide();
                    $("#contact-form").enable(false);
                }
            })
        })

    </script>
}
