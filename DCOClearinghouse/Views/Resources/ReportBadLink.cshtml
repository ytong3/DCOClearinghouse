@model DCOClearinghouse.Models.Resource

@{
    ViewData["Title"] = "Report Bad Link";
}

<h3>Are you sure you want to report this?</h3>

<strong>
    Please report only if:
    <ul>
        <li>The resource's link is broken</li>
        <li>The resource violates the community's guideline</li>
    </ul>
</strong>

<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.Subject)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Subject)
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.Link)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Link)
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.Description)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Description)
    </dd>
</dl>

<form asp-action="ReportBadLinkConfirmed">
    <input type="hidden" asp-for="ID"/>

    <div>
        <input type="submit" value="Confirm" class="btn btn-danger"/>
        <a onclick="history.go(-1)" class="btn btn-primary">Cancel</a>
    </div>
</form>