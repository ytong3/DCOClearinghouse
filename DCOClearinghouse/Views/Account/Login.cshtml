@model DCOClearinghouse.ViewModels.LogInViewModel
@{
    ViewData["title"] = "Log in";
}
<!DOCTYPE html>

<html>
<head>
    <title>Login</title>
</head>
<body>

<br/>
<br/>
<div class="row container-fluid" style="left: 50%;">
<div class="col-md-4">
<h2>Admin Login</h2>
<form asp-action="LogIn" asp-route-returnurl="@ViewData["returnUrl"]">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <label asp-for="Username" class="control-label"></label>
    <input type="text" asp-for="Username" class="form-control"/>

    <label asp-for="Password" class="control-label"></label>
    <input type="password" asp-for="Password" class="form-control"/>
    <br/>
    <label><input type="checkbox" asp-for="RememberMe"/>Remember me</label>
    <br/>
    <br/>
    <input type="submit" value="Login" class="btn btn-primary"/>
</form>
</div>
</div>

</body>
</html>